<h1>
  <b>Books</b>
</h1>

<h1>投稿一覧</h1>

<table class="table">
<tr>
<th>title</th> <th>body</th><th></th>
</tr>
<% @books.each do |book| %>
<tr>

  <td align="left"><%= book.title %></td>
  <td align="left"><%= book.body %></td>
  <td>
  <%= link_to "Show", "/books/#{book.id}" %>
  </td>
  <td>
  <%= link_to "Edit", "/books/#{book.id}/edit" %>
  </td>
  <td>
  <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </td>
</tr>
<% end %>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model:@book, local:true do |f| %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title,class:"book_title" %>
</div>
<div class="field">
  <%= f.label :body %>
  <%= f.text_area :body,class:"book_title" %>
</div>

  <%= f.submit 'Create Book' %>
<% end %>