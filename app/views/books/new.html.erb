<h1>
  <b>Books</b>
</h1>

<h1>投稿一覧</h1>
<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <p>Body</p>
  <span><%= book.body %></span>
  <%= link_to "Show", "/show/#{book.id}" %>
  <%= link_to "Edit", "/edit/#{book.id}" %>
  <%= link_to "Destroy", books_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>

<h2>New book</h2>

<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>
<% end %>
