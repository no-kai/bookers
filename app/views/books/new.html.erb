<h1>
  <b>Books</b>
</h1>

<h1>投稿一覧</h1>

<table class="table">
<tr>
<th>title</th> <th>body</th><th></th>
</tr>
<% @books.each do |book| %>
<tr>

  <td align="left"><%= book.title %></td>
  <td align="left"><%= book.body %></td>
  <td>
  <%= link_to "Show", "/show/#{book.id}" %>
  </td>
  <td>
  <%= link_to "Edit", "/edit/#{book.id}" %>
  </td>
  <td>
  <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
  </td>
</tr>
<% end %>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>


  <%= f.submit 'Create book' %>
<% end %>
